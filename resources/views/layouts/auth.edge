    class="fixed inset-0 object-center object-cover">

  <header class="relative z-10 h-20 p-4 md:p-8 lg:px-0 max-w-[1000px] mx-auto">
    <nav>
      <a href="/" class="font-extrabold uppercase">
        Todo-Ultra ⚡️
      </a>
    </nav>
  </header>

  <main class="relative z-10 mx-auto h-full w-full flex items-center justify-center max-w-[1000px]">
    <div class="grid grid-cols-1 p-4 md:p-8 lg:p-0 lg:grid-cols-2 gap-24 w-full place-items-center">

      <section class="flex flex-col gap-4 w-full h-full md:w-[400px] lg:w-full md:mx-auto lg:mx-0 ">
        @!section('form')
      </section>

      <section class="hidden lg:flex relative items-center justify-center h-full w-full">
        <img
          src="https://uploads-ssl.webflow.com/5dc1d89ee43b1a1a6645c737/64386b7ca64c0d7f61f31ac9_bruddle-header-mockup5.jpg"
          loading="lazy" sizes="(max-width: 991px) 100vw, 1vw"
          srcset="https://uploads-ssl.webflow.com/5dc1d89ee43b1a1a6645c737/64386b7ca64c0d7f61f31ac9_bruddle-header-mockup5-p-500.jpg 500w, https://uploads-ssl.webflow.com/5dc1d89ee43b1a1a6645c737/64386b7ca64c0d7f61f31ac9_bruddle-header-mockup5-p-800.jpg 800w, https://uploads-ssl.webflow.com/5dc1d89ee43b1a1a6645c737/64386b7ca64c0d7f61f31ac9_bruddle-header-mockup5.jpg 872w"
